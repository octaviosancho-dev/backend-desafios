<section class='w-75 mx-auto d-flex flex-column justify-center m-4 p-4 bg-primary bg-opacity-25 border border-primary rounded'>
	<h2 class='text-primary'>Ingrese Producto</h2>
	<form class="container d-flex flex-column" id='form-add-product'>
		<div class='mb-3'>
			<label class='form-label' for='name'>Nombre</label>
			<input
				id='name-product'
				class='form-control'
				type='text'
				name='name'
			/>
		</div>
		<div class='mb-3'>
			<label class='form-label' for='price'>Precio</label>
			<input
				id='price-product'
				class='form-control'
				type='number'
				name='price'
			/>
		</div>
		<div class='mb-3'>
			<label class='form-label' for='thumbnail'>Foto URL</label>
			<input
				id='img-product'
				class='form-control'
				type='url'
				name='thumbnail'
			/>
		</div>
		<input class='btn btn-primary w-25 mx-auto' type='submit' value='Enviar' />
	</form>
</section>
<section class='w-75 mx-auto m-4 p-4 bg-dark bg-opacity-50 border border-dark rounded' style='--bs-bg-opacity: .3;'>
	<h2 class='p-1 text-dark fs-4'>Vista de Productos</h2>

		<table class='table table-dark table-dark border rounded'>
			<thead>
				<tr>
					<th class="text-start">Nombre</th>
					<th class="text-start">Precio</th>
					<th class="text-start">Foto</th>
				</tr>
			</thead>
			<tbody id='table-products'></tbody>
		</table>

		<h2 id="empty-productlist" class='bg-light p-4 text-warning border rounded'>No hay productos listados</h2>

</section>
<section class='w-75 mx-auto p-4 bg-success bg-opacity-25 border border-success rounded' style='--bs-bg-opacity: .3;'>
	<h2 class='text-success mb-4'>Centro de Mensajes</h2>
	<input
		id='user-email'
		class='form-control col-6'
		type='mail'
		id='usermail'
		placeholder='Ingresa tu email'
	/>
	<hr />
	<div id='table-chat' class='my-4'></div>
	<form id='chat-form' class='form-inline'>
		<input
			id='chat-message'
			class='form-control mb-3'
			type='text'
			name='chatmessage'
			placeholder='IngresÃ¡ un mensaje...'
		/>
		<button class='btn btn-primary' type='submit'>Enviar</button>
	</form>
</section>